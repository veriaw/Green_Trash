<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/blob1"
            android:layout_marginTop="-50dp"
            android:scaleType="fitEnd"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/blob2"
            android:layout_gravity="bottom"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_greentrash"
                    android:scaleType="centerCrop"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/transparent"
                    android:text="Masuk"/>
                <Button
                    android:id="@+id/btnDaftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:text="Daftar"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi, GreenMate,"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/primary"
                android:layout_marginTop="50dp"
                android:textAlignment="textStart"
                android:layout_marginHorizontal="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textSize="25sp"
                android:textAlignment="textStart"
                android:layout_marginHorizontal="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email/Nomer Telepon"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="50dp"/>
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan alamat email anda"
                android:textSize="15sp"
                android:autofillHints="username"
                android:layout_marginHorizontal="50dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kata Sandi"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="50dp"/>
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukan kata sandi anda"
                android:textSize="15sp"
                android:autofillHints="username"
                android:layout_marginHorizontal="50dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="50dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Ingat Saya"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:paintFlags="underline"
                    android:textSize="10sp"
                    android:layout_marginStart="80dp"
                    android:backgroundTint="@android:color/transparent"
                    android:text="Lupa Kata Sandi"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:text="Masuk"
                android:textStyle="bold"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum punya akun?,"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Sekarang!"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/primary"
                android:textAlignment="center"
                android:layout_marginHorizontal="50dp"/>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>